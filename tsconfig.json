{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "baseUrl": "./src",
    "outDir": "build"
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules", "build"]
}
